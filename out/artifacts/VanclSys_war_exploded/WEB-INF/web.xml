        <url-pattern>/addShoppingCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delShoppingCart</servlet-name>
        <servlet-class>com.seecen.vancl.controller.delShoppingCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delShoppingCart</servlet-name>
        <url-pattern>/delShoppingCart</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delAllCart</servlet-name>
        <servlet-class>com.seecen.vancl.controller.delAllCart</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delAllCart</servlet-name>
        <url-pattern>/delAllCart</url-pattern>
    </servlet-mapping>
</web-app>