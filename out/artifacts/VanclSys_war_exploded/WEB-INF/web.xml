        <servlet-class>com.seecen.vancl.controller.AddQuestion</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addQuestion</servlet-name>
        <url-pattern>/addQuestion</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>searchSize</servlet-name>
        <servlet-class>com.seecen.vancl.controller.SearchSize</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>searchSize</servlet-name>
        <url-pattern>/searchSize</url-pattern>
    </servlet-mapping>
    
