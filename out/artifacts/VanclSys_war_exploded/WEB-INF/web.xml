        <url-pattern>/checkPhone</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>com.seecen.vancl.controller.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>showGoodsDetail</servlet-name>
        <servlet-class>com.seecen.vancl.controller.ShowGoodsDetail</servlet-class>
